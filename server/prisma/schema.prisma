datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  email      String
  signInName String
  createdAt  DateTime
  tasks      Task[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model TodoUser {
  id    Int    @id @default(autoincrement())
  name  String @unique
  todos Todo[] // 1ユーザーが複数のTodoを持つリレーション
}

model Todo {
  id         Int      @id @default(autoincrement())
  title      String
  createdAt  DateTime @default(now()) // デフォルトで現在時刻
  updatedAt  DateTime @updatedAt // 更新時に自動で現在時刻
  notes      String?
  todoUser   TodoUser @relation(fields: [todoUserId], references: [id]) // ユーザーとのリレーション
  todoUserId Int // 外部キーとしてTodoUserのIDを参照
}
